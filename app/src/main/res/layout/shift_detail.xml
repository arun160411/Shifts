<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/details_layout">

    <fragment xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/map"
              android:name="com.google.android.gms.maps.SupportMapFragment"
              android:layout_width="match_parent"
              android:layout_height="200dp"
              tools:layout_editor_absoluteX="156dp"
              tools:layout_editor_absoluteY="0dp"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="?android:attr/textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="16dp"
              android:paddingLeft="16dp"
              android:textIsSelectable="true"
              android:text="@string/starttime"

              tools:context="com.deputy.challenge.shifts.view.activity.ShiftDetailFragment"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/shift_starttime"
              style="?android:attr/textAppearanceListItem"

              android:textColor="#008000"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="5dp"
              android:paddingLeft="16dp"
              android:textIsSelectable="true"
              tools:context="com.deputy.challenge.shifts.view.activity.ShiftDetailFragment"/>


    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="?android:attr/textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="16dp"
              android:paddingLeft="16dp"
              android:textIsSelectable="true"
              android:text="@string/endtime"
              tools:context="com.deputy.challenge.shifts.view.activity.ShiftDetailFragment"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/shift_endtime"
              style="?android:attr/textAppearanceListItem"

              android:textColor="#DC143C"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="16dp"

              android:textIsSelectable="true"
              tools:context="com.deputy.challenge.shifts.view.activity.ShiftDetailFragment"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="?android:attr/textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="16dp"
              android:paddingLeft="16dp"
              android:textIsSelectable="true"
              android:text="@string/from_address"
              tools:context="com.deputy.challenge.shifts.view.activity.ShiftDetailFragment"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/shift_startaddress"
              style="?android:attr/textAppearanceListItem"
              android:textColor="#008000"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="16dp"
              android:textIsSelectable="true"
              tools:context="com.deputy.challenge.shifts.view.activity.ShiftDetailFragment"/>
    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              style="?android:attr/textAppearanceSmall"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingTop="16dp"
              android:paddingLeft="16dp"
              android:textIsSelectable="true"
              android:text="@string/end_address"
              tools:context="com.deputy.challenge.shifts.view.activity.ShiftDetailFragment"/>

    <TextView xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:id="@+id/shift_endaddress"
              style="?android:attr/textAppearanceListItem"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:paddingLeft="16dp"
              android:textColor="#DC143C"
              android:textIsSelectable="true"
              tools:context="com.deputy.challenge.shifts.view.activity.ShiftDetailFragment"/>
</LinearLayout>